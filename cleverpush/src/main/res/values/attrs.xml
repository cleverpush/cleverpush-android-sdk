<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StoryView">
        <attr name="border_color" format="color" />
        <attr name="background_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="story_view_height" format="dimension" />
        <attr name="story_view_width" format="dimension" />
        <attr name="font_family" format="string" />
        <attr name="widget_id" format="string" />
        <attr name="title_visibility" format="enum">
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="title_text_size" format="dimension" />
        <attr name="story_icon_height" format="dimension" />
        <attr name="story_icon_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="InboxView">
        <attr name="combine_with_api" format="boolean" />
        <attr name="read_color" format="color" />
        <attr name="unread_color" format="color" />
        <attr name="notification_text_color" format="color" />
        <attr name="notification_text_font_family" format="string" />
        <attr name="notification_text_size" format="dimension" />
        <attr name="date_text_color" format="color" />
        <attr name="date_text_font_family" format="string" />
        <attr name="date_text_size" format="dimension" />
        <attr name="divider_colour" format="color" />
    </declare-styleable>
</resources>
