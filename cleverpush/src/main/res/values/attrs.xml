<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StoryView">
        <attr name="border_color" format="color" />
        <attr name="border_color_dark_mode" format="color" />
        <attr name="background_color" format="color" />
        <attr name="background_color_dark_mode" format="color" />
        <attr name="text_color" format="color" />
        <attr name="text_color_dark_mode" format="color" />
        <attr name="story_view_height" format="dimension" >
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="story_view_width" format="dimension" >
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="font_family" format="string" />
        <attr name="widget_id" format="string" />
        <attr name="title_visibility" format="enum">
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="title_text_size" format="dimension" />
        <attr name="story_icon_height" format="dimension" />
        <attr name="story_icon_height_percentage" format="integer" />
        <attr name="story_icon_width" format="dimension" />
        <attr name="story_icon_corner_radius" format="dimension" />
        <attr name="story_icon_space" format="dimension" />
        <attr name="story_icon_shadow" format="boolean" />
        <attr name="border_visibility" format="enum">
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="border_margin" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="sub_story_unread_count_visibility" format="enum" >
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>
        <attr name="sub_story_unread_count_background_color" format="color" />
        <attr name="sub_story_unread_count_background_color_dark_mode" format="color" />
        <attr name="sub_story_unread_count_text_color" format="color" />
        <attr name="sub_story_unread_count_text_color_dark_mode" format="color" />
        <attr name="restrict_to_items" format="integer" />
        <attr name="close_button_position" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="title_position" format="enum">
            <enum name="position_default" value="0" />
            <enum name="position_inside_bottom" value="1" />
            <enum name="position_inside_top" value="2" />
        </attr>
        <attr name="sort_to_last_index" format="enum">
            <enum name="position_default" value="0" />
            <enum name="position_end" value="1" />
        </attr>
        <attr name="dark_mode_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InboxView">
        <attr name="combine_with_api" format="boolean" />
        <attr name="read_color" format="color" />
        <attr name="unread_color" format="color" />
        <attr name="notification_text_color" format="color" />
        <attr name="notification_text_font_family" format="string" />
        <attr name="notification_text_size" format="dimension" />
        <attr name="date_text_color" format="color" />
        <attr name="date_text_font_family" format="string" />
        <attr name="date_text_size" format="dimension" />
        <attr name="divider_colour" format="color" />
    </declare-styleable>
</resources>
